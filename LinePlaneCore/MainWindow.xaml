        <Border BorderBrush="Black" BorderThickness="0"  Background="#FF646464" Grid.Row="0" Grid.ColumnSpan="4">

            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="#FF673AB7" ShadowDepth="0"/>
