<Window x:Class="LinePlaneCore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LinePlaneCore"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="FloorPlan" WindowStartupLocation="CenterScreen" 
        Icon="Resources/icon.png"
         WindowState="Maximized"  
        MinHeight="576"
        MinWidth="1000" WindowStyle="ThreeDBorderWindow"
      
        KeyDown="Cancel" d:DesignWidth="1264.864" d:DesignHeight="1020.166"
        
        >
    <Window.Background>
        <ImageBrush/>
    </Window.Background>


    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" x:Name="Display_Area">

        <Grid.RowDefinitions>
            <RowDefinition Height="86*" />
            <RowDefinition Height="120*" />
            <RowDefinition Height="591*"/>
            <RowDefinition Height="192*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="314*"/>
            <ColumnDefinition Width="664*" />
            <ColumnDefinition Width="134*" />
            <ColumnDefinition Width="143*" />
        </Grid.ColumnDefinitions>


        <Canvas x:Name="canvas"  MouseMove="Canvas_MouseMove" PreviewMouseLeftButtonDown="Canvas_PreviewMouseLeftButtonDown" Grid.ColumnSpan="5" Grid.RowSpan="4" PreviewMouseRightButtonDown="Abort_Paint" Margin="0,0,0,0"   >
            <Canvas.Background>
                <ImageBrush ImageSource="/Resources/grid.gif" RenderOptions.BitmapScalingMode="Fant"/>
            </Canvas.Background>


        </Canvas>

        <Border BorderBrush="Black" BorderThickness="0" Grid.Row="0" Grid.ColumnSpan="5">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" SpreadMethod="Pad" MappingMode="RelativeToBoundingBox" >
                    <GradientStop Color="#FF9572D3" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <Button Background="{x:Null}"  HorizontalAlignment="Left" Width="60" Height="35" Style="{StaticResource MaterialDesignFlatButton}" Margin="50,24,0,0" Grid.Column="1" VerticalAlignment="Top"  Click="Cancel_button">
            <Image Source="Resources/next.png" RenderOptions.BitmapScalingMode="Fant" Height="29" RenderTransformOrigin="0.5,0.5" Width="27">

                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="-1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
        </Button>

        <Button Background="{x:Null}"  HorizontalAlignment="Left" Width="60" Height="35" Click="Button_Next" Style="{StaticResource MaterialDesignFlatButton}" Grid.Column="1" Margin="110,24,0,0" VerticalAlignment="Top" Cursor="Hand">
            <Image Source="Resources/next.png" RenderOptions.BitmapScalingMode="Fant" Height="29" Width="27" />
        </Button>
        <Button Background="{x:Null}" HorizontalAlignment="Left" Height="35" Width="60" Click="Button_Save" Style="{StaticResource MaterialDesignFlatButton}" Margin="0,24,0,0" Grid.Column="0" VerticalAlignment="Top" Grid.ColumnSpan="2" >
            <Image Source="Resources/save.png" RenderOptions.BitmapScalingMode="Fant" Height="29" Width="27" />
        </Button>


        <Button Background="{x:Null}" HorizontalAlignment="Left" Height="35" Width="50" Click="Button_NigthDay" Style="{StaticResource MaterialDesignFlatButton}" Grid.Column="4" VerticalAlignment="Center" Cursor="Hand" >
            <Image Source="Resources/moon.png"  RenderOptions.BitmapScalingMode="Fant"  RenderTransformOrigin="-0.047,0.522" HorizontalAlignment="Center" VerticalAlignment="Stretch" />

        </Button>


        <Ellipse Stroke="#673AB7" RenderOptions.BitmapScalingMode="Fant" MouseLeftButtonDown="User_Button" Grid.Column="4" MaxHeight="60" MaxWidth="60" MinHeight="40" MinWidth="40" Height="6" Width="Auto" HorizontalAlignment="Center" VerticalAlignment="Center">

            <Ellipse.Fill>

                <ImageBrush Stretch="Uniform" 
                            ImageSource="Resources/USER2-removebg-preview.png"
                         />


            </Ellipse.Fill>


        </Ellipse>



        <Border Grid.Column="4" Background="#66292929" x:Name="User_Border" CornerRadius="10" Visibility="Hidden" Margin="0,87,0,0" Grid.RowSpan="2" >
            <StackPanel>
                <Button Background="#FF292929"  Margin="10" Height="29" FontSize="16" Style="{StaticResource MaterialDesignFlatButton}" Click="Button_enter_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Вход" Width="37" TextAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Background="#FF292929"   VerticalAlignment="Bottom" Margin="10,0,10,10" Height="29" FontSize="15" Style="{StaticResource MaterialDesignFlatButton}" Click="Button_registration_Click">
                    <StackPanel Orientation="Horizontal">

                        <TextBlock Text="Регистрация" TextAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <Grid  Grid.Column="0" Grid.Row="1" Width="20" HorizontalAlignment="Left" x:Name="Tool_grid" Grid.ColumnSpan="2" Margin="0,122,0,0" Grid.RowSpan="2">

            <Button x:Name="ButtonTB" Click="ToolBar_Button"  Height="Auto" Style="{StaticResource MaterialDesignFlatButton}" Background="#FF343434" Margin="0,92,0,94" Width="20" HorizontalAlignment="Center"/>

            <Border Background="#66292929" x:Name="ToolBAr_Border" CornerRadius="5" Visibility="Visible" Margin="0,0,-200,0" Width="0" HorizontalAlignment="Left" Grid.RowSpan="1" RenderTransformOrigin="0.484,0.342">

                <Grid>
                    <Button Height="30" Click="Button_Hand" Style="{StaticResource MaterialDesignFlatButton}" Margin="60,7,53,0" HorizontalAlignment="Center" Width="54" VerticalAlignment="Top">
                        <Image Source="Resources/hand.png" Height="36" Width="22" RenderOptions.BitmapScalingMode="Fant"/>
                    </Button>

                    <Button Width="55" Height="30" Click="Button_Edit" Style="{StaticResource MaterialDesignFlatButton}" Margin="0,7,0,1" HorizontalAlignment="Right" VerticalAlignment="Top">
                        <Image Source="Resources/edit.png" Height="36" Width="22" RenderOptions.BitmapScalingMode="Fant"/>
                    </Button>

                    <Button Width="55" Height="30" Click="Button_Cursor"  Style="{StaticResource MaterialDesignFlatButton}" Margin="0,7,0,1" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Image Source="Resources/cursor.png" Height="36" Width="22" RenderOptions.BitmapScalingMode="Fant"/>
                    </Button>

                </Grid>

            </Border>
        </Grid>


    </Grid>

</Window>