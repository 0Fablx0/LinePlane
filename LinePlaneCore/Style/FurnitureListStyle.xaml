<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ControlTemplate x:Key="FurnitureListItems" TargetType="ListBoxItem">
        <Grid>
            <Border 
                Margin="10,5"

                Background="#99B88FDA"

                CornerRadius="2"
                Height="60"
                >
                <Grid>
                    <TextBox Text="{Binding Amount}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding NameFurniture}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding FurnitureURI}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding Price}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                </Grid>
            </Border>
        </Grid>

       
    </ControlTemplate>

</ResourceDictionary>